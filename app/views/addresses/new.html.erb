<!--      </small>-->
    <%# end %>
<!--  </div>-->

  <div class='simple_captcha_refresh_button'>
    <%= simple_captcha_options[:refresh_button] %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary col-sm-12">Get NOS</button>
    <% if flash[:success] %>
      <small class="form-text text-success">
        <%= flash[:success] %>
      </small>
    <% end %>
  </div>

<% end %>
