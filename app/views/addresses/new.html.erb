<%= form_with model: @address, local: true do |form| %>

  <div class='simple_captcha_image'>
    <%= simple_captcha_options[:image] %>
  </div>

  <div class='simple_captcha_refresh_button'>
    <%= simple_captcha_options[:refresh_button] %>
  </div>

  <div class='simple_captcha_field'>
    <span>captcha</span>
    <span><%= simple_captcha_options[:field] %></span>
  </div>

  <% if flash[:captcha] %>
    <div><%= flash[:captcha] %></div>
  <% end %>

  <div>
    <div>Enter you address</div>
    <%= form.text_field :addr, style: "width: 500px;" %>
  </div>

  <% if flash[:addr] %>
    <div><%= flash[:addr] %></div>
  <% end %>


  <div>
    <%= form.submit "Get NOS" %>
  </div>

  <% if flash[:success] %>
    <div><%= flash[:success] %></div>
  <% end %>

<% end %>
